<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lbEditaDespesaFixaDiaPgto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dia de Pagamento:"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/lbEditaDespesaFixaDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição:"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEditaDespesaFixaDiaPgto" />

    <TextView
        android:id="@+id/lbEditaDespesaFixaMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mês:"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEditaDespesaFixaDescricao" />

    <TextView
        android:id="@+id/lbEditaDespesaFixaAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ano:"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEditaDespesaFixaMes" />

    <EditText
        android:id="@+id/txtEditaDespesaFixaDiaPgto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbEditaDespesaFixaDiaPgto" />

    <EditText
        android:id="@+id/txtEditaDespesaFixaDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbEditaDespesaFixaDescricao" />

    <EditText
        android:id="@+id/txtEditaDespesaFixaAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbEditaDespesaFixaAno" />

    <EditText
        android:id="@+id/txtEditaDespesaFixaMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbEditaDespesaFixaMes" />

    <Button
        android:id="@+id/btnEditaDespesaFixaSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEditaDespesaFixaAno" />

    <Button
        android:id="@+id/btnEditaDespesaFixaCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Cancelar"
        app:layout_constraintLeft_toRightOf="@+id/btnEditaDespesaFixaSalvar"
        app:layout_constraintTop_toBottomOf="@+id/txtEditaDespesaFixaAno" />

    <ProgressBar
        android:id="@+id/pbEditaDespesaFixaDia"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnEditaDespesaFixaCancelar"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="324dp" />

</android.support.constraint.ConstraintLayout>